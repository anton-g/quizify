{
  "name": "quizify-server",
  "version": "0.1.0",
  "author": "anton-g",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "build": "rm -rf dist && tsc && copyfiles -u 1 src/locales/* dist",
    "start": "NODE_ENV=production node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "deploy": "heroku container:push web -a quizify-server && heroku container:release web -a quizify-server"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/mongoose": "^4.0.0",
    "@nestjs/passport": "^1.1.0",
    "@nestjs/testing": "^5.4.0",
    "@nestjs/websockets": "^5.4.0",
    "@sentry/node": "^4.1.1",
    "@types/socket.io": "^1.4.33",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "i18n": "^0.8.3",
    "joi": "^13.5.2",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.7.5",
    "nanoid": "^3.1.31",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/joi": "^13.4.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.4.7",
    "copyfiles": "^2.0.0",
    "jest": "^22.4.3",
    "mockgoose-fix": "^7.3.6",
    "nodemon": "^1.18.4",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
